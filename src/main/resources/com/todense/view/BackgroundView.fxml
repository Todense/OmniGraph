<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.ToggleSwitch?>

<VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="3.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.todense.view.BackgroundView">
   <HBox alignment="CENTER">
      <Label prefWidth="300.0" text="Background color">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <ColorPicker fx:id="backgroundColorPicker" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="88.0" />
   </HBox>
   <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="190.0">
      <ToggleSwitch fx:id="gridToggleSwitch" contentDisplay="TOP" graphicTextGap="0.0" prefHeight="15.0" prefWidth="300.0" text="Show Grid" textAlignment="CENTER" viewOrder="1.0">
         <font>
            <Font size="10.0" />
         </font>
      </ToggleSwitch>
   </HBox>
   <Label alignment="CENTER" prefHeight="4.0" prefWidth="187.0" styleClass="darkLabel" text="Grid Options" />
   <VBox fx:id="gridOptionsVBox" alignment="CENTER" styleClass="subsection" />
   <padding>
      <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
   </padding>
</VBox>
